<% content_for :sidebar do %>
  <%= render :partial => '/conversatio/blogs/tag_cloud_single_blog' %>
<% end %>

<div class="titleB">Create post in <%= @blog.title %></div>

<%= error_messages_for :post %>
<% form_for :post, :url => member_conversatio_blog_posts_path(@blog), :html => {:method => "post"} do |f| -%>
  <fieldset>
    <legend>Metadata</legend>
    <div class="fields">
      <p><label for="post_tag_list">Tags (separated with ,)</label><%= f.text_field :tag_list, :class=>"fieldbox wide" -%></p>
      <p><label for="post_state">Status</label><%= select_tag "state", options_for_select(Conversatio::Post.states, :draft) -%></p>
    </div>
  </fieldset>
  <fieldset>
    <legend>Content</legend>
    <div class="fields">
      <p><label for="post_title">Title</label><%= f.text_field :title, :class=>"fieldbox wide" -%></p>
      <p><label for="post_body">Body</label><%= f.text_area :body, :class=>"fieldbox wide" -%></p>
    </div>
  </fieldset>

  <div class="actions">
    <%= submit_tag 'Create post', {:class => "button mainaction", :accesskey => "s"} %>
  </div>
<% end -%>