<div class="titleB">Edit blog</div>

<%= error_messages_for :blog %>

<% form_for :blog, :url => member_conversatio_blog_path, :html => {:id => "settings", :method => "put"} do |f| -%>
  <fieldset>
    <div class="fields">
      <p>
        <label for="blog_title">Title</label><%= f.text_field :title, :class=>"fieldbox wide" %>
      </p>
      <p>
        <label for="blog_description">Description</label><%= f.text_area :description, :class=>"fieldbox wide" %>
      </p>
    </div>
  </fieldset>
  <div class="actions"><%= submit_tag 'Update blog', {:class=>"button mainaction", :accesskey => "s"} %></div>
<% end -%>
